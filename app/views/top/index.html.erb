<section class="top-top5s">
  <h2>TOP PROJECT</h2>
  <div class="ranking-slider">
    <% @ranked_posts.each do |post| %>
      <div class="ranked-post">
        <div class="ranked-post-header">
          <div class="ranked-post-header-icon">icon</div>
          <div class="ranked-post-header-title"><%= link_to post.title, post %></div>
          <div class="ranked-post-header-outline"><%= post.outline %></div>
        </div>
        <div class="ranked-post-content">
          <div class="ranked-post-text_status"><%= post.status %></div>
        </div>
        <div class="ranked-post-footer">
          <%= image_tag post.user.image %>
          <%= post.user.username %>
        </div>
      </div>
    <% end %>
  </div>
</section>


<section class="top-posts clearfix">
<h2>NEW</h2>
  <%= link_to 'planner', search_posts_path(sort:'planner') %>
  <%= link_to 'engineer', search_posts_path(sort:'engineer') %>
  <%= link_to 'designer', search_posts_path(sort:'designer') %>

  <% if user_signed_in? %>
    <ul class="posts">
      <% @posts.each do |post| %>
          <li class="posts-post">
            <div class="posts-post-text">
              <div class="post-content">
                <h1><%= post.title %></h1>

                <p class="post-outline">
                  <%= post.outline %>
                </p>

                <div class="post-status">
                  <div class="status-line">
                    <div class="status-planning<%= post_status_active_class(post, 'planning') %>">
                      <span>募集中</span>
                      <%= fa_icon 'play-circle-o' %>
                    </div>
                    <div class="status-development<%= post_status_active_class(post, 'development') %>">
                      <span>開発中</span>
                      <%= fa_icon 'play-circle-o' %>
                    </div>
                    <div class="status-release<%= post_status_active_class(post, 'release') %>">
                      <span>リリース</span>
                      <%= fa_icon 'play-circle-o' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
      <% end %>
    </ul>
  <% else %>
    <ul class="posts">
      <% @posts.each do |post| %>
          <li class="posts-post">
            <div class="posts-post-text">
              <div class="post-content">
                <h1><%= post.title %></h1>

                <p class="post-outline">
                  <%= post.outline %>
                </p>

                <div class="post-status">
                  <div class="status-line">
                    <div class="status-planning<%= post_status_active_class(post, 'planning') %>">
                      <span>募集中</span>
                      <%= fa_icon 'play-circle-o' %>
                    </div>
                    <div class="status-development<%= post_status_active_class(post, 'development') %>">
                      <span>開発中</span>
                      <%= fa_icon 'play-circle-o' %>
                    </div>
                    <div class="status-release<%= post_status_active_class(post, 'release') %>">
                      <span>リリース</span>
                      <%= fa_icon 'play-circle-o' %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="posts-post-text_more"><%= link_to 'この企画に参加！', user_facebook_omniauth_authorize_path %></div>
            </div>
          </li>
      <% end %>
    </ul>
  <% end %>

</section>
