<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Outline</th>
      <th>Detail</th>
      <th>Image</th>
      <th>Template</th>
      <th>Private flag</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.outline %></td>
        <td><%= post.detail %></td>
        <td><%= post.image %></td>
        <td><%= post.template_id %></td>
        <td><%= post.private_flag %></td>
        <td><%= post.status %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
