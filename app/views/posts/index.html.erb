<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Outline</th>
      <th>Detail</th>
      <th>Image</th>
      <th>Template</th>
      <th>User</th>
      <th>Private flag</th>
      <th>Status</th>
      <th>Num of planner</th>
      <th>Num of engineer</th>
      <th>Num of designer</th>
      <th>Num of graphicer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.outline %></td>
        <td><%= post.detail %></td>
        <td><%= post.image %></td>
        <td><%= post.template_id %></td>
        <td><%= post.user_id %></td>
        <td><%= post.private_flag %></td>
        <td><%= post.status %></td>
        <td><%= post.num_of_planner %></td>
        <td><%= post.num_of_engineer %></td>
        <td><%= post.num_of_designer %></td>
        <td><%= post.num_of_graphicer %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
