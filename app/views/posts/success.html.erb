                      <%= link_to fa_icon('heart-o'), support_post_path(post), method: :post, class: 'post-vote-heart' %>
                    <% end %>
                    <span class="post-vote-count"><%= Vote.where(post_id: post, support: true).count %></span>
                  <% end %>
                </div>
              </div>
            </div>
          </li>

  <% end %>
</ul>
