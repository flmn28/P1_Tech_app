$(function() {
  <% if @save_type == 'private' %>
  $('[data-remodal-id=modal]').remodal().open();
  $('#post-preview-template').css({
      'width': '350px',
      'height': '200px',
      'margin': '0 auto',
      'background-size': 'cover',
      'border-radius': '5px',
    });
  $(document).on('closing', '.remodal', function (e) {
    location.href = "http://"+location.host
  });
  <% else %>
  $('[data-remodal-id=modal]').remodal().open();
  $('#post-preview-template').css({
    'width': '350px',
    'height': '200px',
    'margin': '0 auto',
    'background-size': 'cover',
    'border-radius': '5px',
  });
  $(document).on('closing', '.remodal', function (e) {
    location.href = "http://"+location.host + "/posts/" + <%= @post.id %> + "/success"
  });
  <% end %>
});
