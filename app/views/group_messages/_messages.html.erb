<% @messages.each do |message| %>
  <div>
    <p><%= message.user.username %></p>
    <p><%= message.content %></p>
    <% if message.user_id == current_user.id %>
      <p><%= link_to '削除', destroy_group_message_path(id: message.id, post_id: @post.id), method: :delete, remote: true, data: { confirm: '削除しますか？' } %></p>
    <% end %>
  </div>
<% end %>
