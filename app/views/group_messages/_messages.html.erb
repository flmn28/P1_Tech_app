<% @messages.each do |message| %>
  <div class="group-message clearfix">
    <div class="message-userimage-box">
      <%= link_to user_path(message.user) do %>
        <%= image_tag message.user.image %>
      <% end %>
    </div>
    <div class="message-container">
      <div class="message-info">
        <span class="message-username"><%= message.user.username %></span>
        <span class="message-time"><%= message.created_at.strftime("%m/%d %H:%M") %></span>
      </div>
      <div class="message-content">
        <%= message.content %>
      </div>
      <!-- <% if message.user_id == current_user.id %>
        <%= link_to '削除', destroy_group_message_path(id: message.id, post_id: @post.id), method: :delete, remote: true, data: { confirm: '削除しますか？' }, class: "message-detele-btn" %>
      <% end %> -->
    </div>
  </div>
<% end %>
